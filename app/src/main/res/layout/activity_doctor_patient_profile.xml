<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Patient photo and info -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivPatientPhoto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_account"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_circle_white"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPatientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Имя пациента"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#222"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tvPatientEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="15sp"
                    android:textColor="#666"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tvPatientPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Телефон"
                    android:textSize="15sp"
                    android:textColor="#666"
                    android:layout_marginBottom="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Add VideoLesson button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Добавить видеоурок"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:backgroundTint="#2e7d32"
            android:icon="@drawable/ic_baseline_video_library_24"
            android:iconTint="#FFF"
            app:iconPadding="12dp"
            android:textSize="16sp" />

        <!-- Общий прогресс -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="Общий прогресс"
                android:textStyle="bold"
                android:textColor="#222"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

            <ProgressBar
                android:id="@+id/progressOverall"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:progress="70"
                android:max="100"
                android:progressTint="#2e7d32"
                android:background="#e0e0e0"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvOverallProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70%"
                android:textColor="#2e7d32"
                android:textSize="15sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Нарушения -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="Нарушения"
                android:textStyle="bold"
                android:textColor="#C62828"
                android:textSize="18sp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/tvOverdueVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Просроченных видео: 0"
                android:textSize="15sp"
                android:textColor="#C62828"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvOverdueMeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пропущенных лекарств: 0"
                android:textSize="15sp"
                android:textColor="#C62828"/>
        </LinearLayout>

        <!-- Категории -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2">

            <LinearLayout
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginEnd="6dp">

                <TextView
                    android:text="Видеоуроки"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
                <TextView
                    android:id="@+id/tvVideoStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/0"
                    android:textColor="#00796B"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="6dp">

                <TextView
                    android:text="Лекарства"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
                <TextView
                    android:id="@+id/tvMedStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/0"
                    android:textColor="#C62828"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
