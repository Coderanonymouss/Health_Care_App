<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Папка -->
        <Spinner
            android:id="@+id/spinner_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:prompt="@string/prompt_select_folder" />

        <!-- Имя видеоурока -->
        <EditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/video_lesson_name"
            android:layout_marginBottom="12dp"/>

        <!-- Ссылка на YouTube (необязательно) -->
        <EditText
            android:id="@+id/input_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/youtube"
            android:layout_marginBottom="12dp"/>

        <!-- Кнопка выбора видео из галереи -->
        <Button
            android:id="@+id/btn_choose_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_video_from_gallery"
            android:layout_marginBottom="12dp"/>

        <!-- Имя выбранного файла (отображается после выбора) -->
        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="12dp"
            android:textStyle="italic"/>

        <!-- Кнопка сохранить -->
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"/>

    </LinearLayout>
</ScrollView>
