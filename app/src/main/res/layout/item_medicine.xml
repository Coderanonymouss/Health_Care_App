<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/dlya_shapka">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="18dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMedName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Лекарство"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageButton
                android:id="@+id/btnDeleteMedicine"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Удалить"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_baseline_delete_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvMedDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дозировка: 500mg"
            android:textColor="@color/secondaryText"
            android:textSize="15sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvMedTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Қабылдау уақыты: 08:00, 14:00"
            android:textColor="@color/secondaryText"
            android:textSize="15sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvLastTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Соңғы қабылдау: --:--"
            android:textColor="@color/primaryText"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:id="@+id/historyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/btnTakeMedicine"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Қабылдадым"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/dlya_shapka"
            android:textColor="@android:color/white"
            android:elevation="2dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
